        <StackLayout Orientation="Horizontal" Margin="10,20,20,0"   HorizontalOptions="Center">
            <Label Text="Phone: " 
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="10,0,0,0"
                   FontSize="12"
                   />
            <Label Text=" 0743969458" 
                   TextColor="Black"
                   Margin="10,0,0,0"
                   FontSize="12"
                   />
        </StackLayout >
        <StackLayout Orientation="Horizontal" Margin="10,20,20,0" HorizontalOptions="Center">
            <Label Text="Email: " 
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="10,0,0,0"
                   FontSize="12"
                   />
            <Label Text=" dog_grooming@gmail.com" 
